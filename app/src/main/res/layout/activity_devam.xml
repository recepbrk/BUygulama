<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#181A21"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >




            <TextView

                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/poppins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Devamlılık Formasyonları" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"

                android:textSize="18sp"
                android:text="Yükselen Üç Metot" />



            <ImageView

                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/rising"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins"
                android:layout_marginEnd="16dp"
                android:text="@string/rising"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"

                android:textSize="18sp"
                android:text="Düşen Üç Metot" />

            <ImageView

                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/falling"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins"
                android:layout_marginEnd="16dp"
                android:text="Yükselen üç metodun tersidir ve aşağı yönlü trendin devam ettiğini gösterir."
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"

                android:textSize="18sp"
                android:text="Doji" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins"
                android:layout_marginEnd="16dp"
                android:text="@string/doji"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                />

            <ImageView

                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/gradoji"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"

                android:textSize="18sp"
                android:text="Uzun bacaklı Doji – Hem uzun hem de kısa fitile sahip ve açılış/kapanış fiyatı ortalarda yer alan kararsız mum." />
            <ImageView

                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/longdoji"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins"
                android:layout_marginEnd="16dp"
                android:text="Yusufçuk Doji – Uzun bir alt fitile sahip ve açılış/kapanışın üst uç yakınlarında olduğu ayı ya da boğa (bağlama göre) mumu."
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                />

            <ImageView

                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/dragonflydoji"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/doji_end"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>